<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <security-constraint>
    	<web-resource-collection>
    		<web-resource-name>Must Log In</web-resource-name>
    		<url-pattern>/finance/*</url-pattern>
    	</web-resource-collection>
    	<auth-constraint>
    		<role-name>admin</role-name>
    	</auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Must Log In</web-resource-name>
            <url-pattern>/loginPage</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>basic</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>user-store</realm-name>
        <form-login-config>
            <form-login-page>/WEB-INF/jsp/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/jsp/loginFail.jsp</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <description>Role for admin</description>
    	<role-name>admin</role-name>
    </security-role>

    <security-role>
        <description>Role for basic user</description>
        <role-name>basic</role-name>
    </security-role>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- mappings for aquarium pages -->
    <servlet>
        <servlet-name>aquariums</servlet-name>
        <jsp-file>/WEB-INF/jsp/fishDatabase/aquariums.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>aquariums</servlet-name>
        <url-pattern>/aquariums</url-pattern>
    </servlet-mapping>

    <!-- mappings for hardware pages -->
    <servlet>
        <servlet-name>hardware</servlet-name>
        <jsp-file>/WEB-INF/jsp/hardwareDatabase/hardware.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>hardware</servlet-name>
        <url-pattern>/hardware</url-pattern>
    </servlet-mapping>

    <!-- mappings for hardware pages -->
    <servlet>
        <servlet-name>finance</servlet-name>
        <jsp-file>/WEB-INF/jsp/finance/finance.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>finance</servlet-name>
        <url-pattern>/finance</url-pattern>
    </servlet-mapping>

    <!-- mapping for user account apge -->
    <servlet>
        <servlet-name>user account page</servlet-name>
        <jsp-file>/WEB-INF/jsp/user/userAccount.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user account page</servlet-name>
        <url-pattern>/myAccount</url-pattern>
    </servlet-mapping>

    <!-- mapping for log in -->
    <servlet>
        <servlet-name>log in</servlet-name>
        <jsp-file>/WEB-INF/jsp/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>log in</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- mapping for log out -->
    <servlet>
        <servlet-name>log out</servlet-name>
        <jsp-file>/WEB-INF/jsp/logout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>log out</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- navbar for each page -->
    <servlet>
        <servlet-name>navbar</servlet-name>
        <jsp-file>/WEB-INF/jsp/includes/navbar.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>navbar</servlet-name>
        <url-pattern>/navbar</url-pattern>
    </servlet-mapping>

    <!-- mapping error pages -->
    <servlet>
        <servlet-name>404</servlet-name>
        <jsp-file>/WEB-INF/jsp/errors/404.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>404</servlet-name>
        <url-pattern>/404</url-pattern>
    </servlet-mapping>


    <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/errors/403.jsp</location>
  </error-page>
    <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/errors/404.jsp</location>
  </error-page>


</web-app>
